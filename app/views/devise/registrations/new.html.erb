<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">ユーザー登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "shadow-lg p-3 mb-5 bg-white rounded"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, "名前", class: "font-weight-bold" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "名前を入力してください" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "font-weight-bold" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: "font-weight-bold" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "font-weight-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "もう一度パスワードを入力してください" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
