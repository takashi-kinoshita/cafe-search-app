<h2 class="mb-4">新しいレビューを投稿</h2>

<%= form_with(model: [@cafe, @review], local: true) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "エラー") %> 件のため、レビューは保存されませんでした:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, id: :review_title %>
  </div>

  <div class="field">
    <%= form.label :body, '本文' %>
    <%= form.text_area :body, id: :review_body %>
  </div>

  <div class="actions">
    <%= form.submit '投稿する' %>
  </div>
<% end %>

<%= link_to '戻る', cafe_path(@cafe) %>
