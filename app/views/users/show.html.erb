<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h2><%= @user.name %>さんのプロフィール</h2>
      <div class="mt-4">
        <img class="img-fluid rounded-circle" src="<%= @user.avatar_was %>" alt="ユーザーアバター">
      </div>
    </div>

    <div class="col-md-8">
      <div class="mt-4">
        <h3>プロフィール詳細</h3>
        <p><strong>メール:</strong> <%= @user.email %></p>
        <p><strong>登録日:</strong> <%= @user.created_at.to_formatted_s(:long) %></p>
      </div>

      <div class="mt-4">
        <h3>レビュー</h3>
        <% @user.reviews.each do |review| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.title %></h5>
              <p class="card-text"><%= review.body %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
